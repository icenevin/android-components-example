<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user.create.UserCreateFragment">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/AppToolbar" />
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="@dimen/dp_92"
                        android:layout_height="@dimen/dp_92"
                        android:layout_marginTop="@dimen/dp_48"
                        android:background="@drawable/bg_user_avatar"
                        android:backgroundTint="@color/black_600"
                        android:padding="@dimen/dp_24"
                        android:src="@drawable/ic_add_a_photo_black_24dp"
                        android:tint="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivAvatar">

                        <com.example.components.architecture.nvice.ui.user.create.UserCreateInputField
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:field_hint="First Name"
                            app:field_icon="@drawable/ic_person_black_24dp" />

                        <com.example.components.architecture.nvice.ui.user.create.UserCreateInputField
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:field_hint="Last Name" />

                        <com.example.components.architecture.nvice.ui.user.create.UserCreateInputSpinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:spinner_fullWidth="true"
                            app:spinner_icon="@drawable/ic_work_black_24dp" />

                        <com.example.components.architecture.nvice.ui.user.create.UserCreateInputSpinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:spinner_icon="@drawable/ic_circle_black"
                            app:spinner_iconPadding="@dimen/dp_6" />

                        <com.example.components.architecture.nvice.ui.user.create.UserCreateInputSpinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:spinner_fullWidth="true"
                            app:spinner_icon="@drawable/ic_date_range_black_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:text="Profile Cover"
                            android:textSize="@dimen/text_body2" />

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/dp_72">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_margin="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="@drawable/bg_corner_rd_16"
                                android:backgroundTint="@color/primary_transparent"
                                android:padding="@dimen/dp_76"
                                android:src="@drawable/ic_photo_black_24dp"
                                android:tint="@color/white"
                                app:layout_constraintDimensionRatio="16:9"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v4.widget.NestedScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:elevation="@dimen/dp_8"
                android:clipToPadding="false"
                >

                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:padding="@dimen/dp_20"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_gravity="end"
                    android:textColor="@color/blue"
                    android:text="add staff"
                    />

            </FrameLayout>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
